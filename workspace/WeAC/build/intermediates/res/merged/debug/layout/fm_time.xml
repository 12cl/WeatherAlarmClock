<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <com.kaku.weac.view.MyTimer
        android:id="@+id/timer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layerType="software"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/btn_start_llyt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp">

            <ImageView
                android:id="@+id/btn_start"
                style="@style/timer_btn"
                android:layout_alignParentLeft="true"
                android:contentDescription="@null"
                android:src="@drawable/btn_timer_start"/>

            <ImageView
                android:id="@+id/btn_quick"
                style="@style/timer_btn"
                android:layout_centerInParent="true"
                android:contentDescription="@null"
                android:src="@drawable/btn_timer_quick"/>

            <ImageView
                android:id="@+id/btn_ring"
                style="@style/timer_btn"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:contentDescription="@null"
                android:src="@drawable/btn_timer_ring"/>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/btn_start_llyt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp">

                <ImageView
                    android:id="@+id/btn_stop"
                    style="@style/timer_btn"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_timer_pause"/>

                <ImageView
                    android:id="@+id/btn_start2"
                    style="@style/timer_btn"
                    android:contentDescription="@null"
                    android:src="@drawable/btn_timer_start"
                    android:visibility="gone"/>
            </FrameLayout>

            <ImageView
                android:id="@+id/btn_reset"
                style="@style/timer_btn"
                android:contentDescription="@null"
                android:src="@drawable/btn_timer_reset"/>

        </LinearLayout>
    </FrameLayout>


</LinearLayout>
