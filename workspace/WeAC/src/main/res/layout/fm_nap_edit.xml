<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/dialog_llyt" >

    <TextView
        style="@style/dialog_title"
        android:text="@string/nap_set"
        android:textColor="@color/gray_ring_select_title" />

    <LinearLayout
        style="@style/new_alarm_clcok_nap_edit_options_llyt"
        android:layout_marginTop="20dp" >

        <TextView
            style="@style/new_alarm_clcok_nap_edit_options_tv"
            android:text="@string/interval" />

        <RadioGroup
            android:id="@+id/nap_interval_radio_group"
            style="@style/new_alarm_clcok_nap_edit_options_radio_group" >

            <RadioButton
                android:id="@+id/nap_interval_btn5"
                style="@style/new_alarm_clcok_nap_edit_radio_btn"
                android:layout_marginLeft="0dp"
                android:text="@string/five" />

            <RadioButton
                android:id="@+id/nap_interval_btn10"
                style="@style/new_alarm_clcok_nap_edit_radio_btn"
                android:text="@string/ten" />

            <RadioButton
                android:id="@+id/nap_interval_btn20"
                style="@style/new_alarm_clcok_nap_edit_radio_btn"
                android:text="@string/twenty" />

            <RadioButton
                android:id="@+id/nap_interval_btn30"
                style="@style/new_alarm_clcok_nap_edit_radio_btn"
                android:text="@string/thirty" />

            <RadioButton
                android:id="@+id/nap_interval_btn60"
                style="@style/new_alarm_clcok_nap_edit_radio_btn"
                android:text="@string/num" />
        </RadioGroup>
    </LinearLayout>

    <View
        style="@style/divider_line"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp" />

    <LinearLayout style="@style/new_alarm_clcok_nap_edit_options_llyt" >

        <TextView
            style="@style/new_alarm_clcok_nap_edit_options_tv"
            android:text="@string/times" />

        <RadioGroup
            android:id="@+id/nap_times_radio_group"
            style="@style/new_alarm_clcok_nap_edit_options_radio_group" >

            <RadioButton
                android:id="@+id/nap_times_btn1"
                style="@style/new_alarm_clcok_nap_edit_radio_btn"
                android:layout_marginLeft="0dp"
                android:text="@string/one" />

            <RadioButton
                android:id="@+id/nap_times_btn3"
                style="@style/new_alarm_clcok_nap_edit_radio_btn"
                android:text="@string/three" />

            <RadioButton
                android:id="@+id/nap_times_btn5"
                style="@style/new_alarm_clcok_nap_edit_radio_btn"
                android:checked="true"
                android:text="@string/five" />

            <RadioButton
                android:id="@+id/nap_times_btn8"
                style="@style/new_alarm_clcok_nap_edit_radio_btn"
                android:text="@string/eight" />

            <RadioButton
                android:id="@+id/nap_times_btn10"
                style="@style/new_alarm_clcok_nap_edit_radio_btn"
                android:text="@string/ten" />
        </RadioGroup>
    </LinearLayout>

    <include layout="@layout/btn_dialog_sure_cancel" />

</LinearLayout>