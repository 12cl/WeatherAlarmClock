<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout style="@style/action_llyt">

        <ImageView
            android:id="@+id/action_home"
            style="@style/action_icon"
            android:layout_alignParentLeft="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_action_home" />

        <TextView
            android:id="@+id/action_title"
            style="@style/action_title"
            android:drawableLeft="@drawable/ic_gps"
            android:drawablePadding="5dp"
            android:text="天津" />

        <ImageView
            android:id="@+id/action_refresh"
            style="@style/action_icon"
            android:layout_alignParentRight="true"
            android:contentDescription="@null"
            android:src="@drawable/ic_action_refresh" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:background="@drawable/shape_circle_promt"
                    android:drawableLeft="@drawable/ic_alarm"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="5dp"
                    android:text="雷电预警"
                    android:textColor="@color/white_trans90"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="19:03发布"
                    android:textColor="@color/white_trans60"
                    android:textSize="14sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="42dp"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="42dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        style="@style/wea_degree"
                        android:contentDescription="@null"
                        android:src="@drawable/number_2" />

                    <ImageView
                        style="@style/wea_degree"
                        android:contentDescription="@null"
                        android:src="@drawable/number_8" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <ImageView
                            style="@style/wea_degree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:contentDescription="@null"
                            android:src="@drawable/centigrade" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:paddingLeft="5dp"
                            android:text="雷阵雨"
                            android:textColor="@color/white_trans90"
                            android:textSize="18sp" />
                    </RelativeLayout>

                </LinearLayout>

                <TextView
                    style="@style/wea_prompt"
                    android:layout_marginTop="20dp"
                    android:drawableLeft="@drawable/ic_weather_air"
                    android:drawablePadding="10dp"
                    android:text="轻度污染 156" />

                <TextView
                    style="@style/wea_prompt"
                    android:drawableLeft="@drawable/ic_weather_wet"
                    android:text="湿度 65%" />

                <TextView
                    style="@style/wea_prompt"
                    android:drawableLeft="@drawable/ic_weather_wind"
                    android:text="西南风 3级" />
            </LinearLayout>

            <View
                style="@style/divider_line_wea"
                android:layout_marginBottom="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout style="@style/wea_forecast_llyt">

                    <TextView
                        style="@style/wea_forecast_title"
                        android:text="今天" />

                    <LinearLayout style="@style/wea_forecast_content_llyt">

                        <ImageView
                            style="@style/wea_forecast_content_iv"
                            android:src="@drawable/ic_wea_thunder_shower" />

                        <RelativeLayout style="@style/wea_forecast_content_degree_rlyt">

                            <TextView
                                style="@style/wea_forecast_content_degree_rlyt_tv"
                                android:layout_alignParentTop="true"
                                android:text="28°" />

                            <TextView
                                style="@style/wea_forecast_content_degree_rlyt_tv"
                                android:layout_alignParentBottom="true"
                                android:text="20°" />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        style="@style/wea_forecast_content_detail"
                        android:text="雷阵雨转中雨" />
                </LinearLayout>

                <View style="@style/divider_line_wea_vertical" />

                <LinearLayout style="@style/wea_forecast_llyt">

                    <TextView
                        style="@style/wea_forecast_title"
                        android:text="明天" />

                    <LinearLayout style="@style/wea_forecast_content_llyt">

                        <ImageView
                            style="@style/wea_forecast_content_iv"
                            android:src="@drawable/ic_wea_sunny" />

                        <RelativeLayout style="@style/wea_forecast_content_degree_rlyt">

                            <TextView
                                style="@style/wea_forecast_content_degree_rlyt_tv"
                                android:layout_alignParentTop="true"
                                android:text="32°" />

                            <TextView
                                style="@style/wea_forecast_content_degree_rlyt_tv"
                                android:layout_alignParentBottom="true"
                                android:text="22°" />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        style="@style/wea_forecast_content_detail"
                        android:text="晴" />
                </LinearLayout>

                <View style="@style/divider_line_wea_vertical" />

                <LinearLayout style="@style/wea_forecast_llyt">

                    <TextView
                        style="@style/wea_forecast_title"
                        android:text="后天" />

                    <LinearLayout style="@style/wea_forecast_content_llyt">

                        <ImageView
                            style="@style/wea_forecast_content_iv"
                            android:src="@drawable/ic_wea_cloudy" />

                        <RelativeLayout style="@style/wea_forecast_content_degree_rlyt">

                            <TextView
                                style="@style/wea_forecast_content_degree_rlyt_tv"
                                android:layout_alignParentTop="true"
                                android:text="33°" />

                            <TextView
                                style="@style/wea_forecast_content_degree_rlyt_tv"
                                android:layout_alignParentBottom="true"
                                android:text="21°" />
                        </RelativeLayout>
                    </LinearLayout>

                    <TextView
                        style="@style/wea_forecast_content_detail"
                        android:text="多云转晴" />
                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="多天预报"
                    android:textColor="@color/white_trans90"
                    android:textSize="16sp" />

                <View
                    style="@style/divider_line_wea"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <lecho.lib.hellocharts.view.LineChartView
                android:id="@+id/chart2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp" />

            <Button
                android:id="@+id/read_wea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="读取" />

            <TextView
                android:id="@+id/wea_prompt_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/black_trans50"
                android:textColor="@color/white_trans90" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
